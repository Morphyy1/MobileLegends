                        <Button CornerRadius="100" BackgroundColor="White" BorderColor="#FEB4CB" BorderWidth="2" Margin="50, 180, 200, -10"/>
                        <Button CornerRadius="100" BackgroundColor="White" BorderColor="#FEB4CB" BorderWidth="2" Margin="220, 180, 30, -10"/>
